- tag :div, object.merge_html_attributes(class: " so_thumb m_selectable") do  
  - if object.controls?
    .m_hover_controls= object.controls.join(' ')
  
  - if object.url? or object.name?
    %a.l_title{href: object.url}= object.name? ? object.name : "(#{t(:empty)})"
  
  - if object.image?
    %a.l_image{href: object.url}
      %img{src: object.image.thumb_url}
      
  .css_clear