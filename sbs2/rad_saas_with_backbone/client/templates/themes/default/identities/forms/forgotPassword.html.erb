<h1><%= t('forgot_password') %></h1>
<form>
  <fieldset>
    <% $.formBuilder(model ,function(f){ %>
      <%- f.baseErrors() %>
      <%- f.textField('email', {required: true, description: t('forgot_password_hint')}) %>
    <% }) %>
  </fieldset>
  <div class="actions">
    <button class="_ok btn primary"><%= t('ok') %></button>&nbsp;
    <button class="_back btn"><%= t('back') %></button>
  </div>
</form>